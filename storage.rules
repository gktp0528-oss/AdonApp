rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Listing images - anyone can read, only authenticated users can write
    // Matches: listings/photos/*, listings/ai_logs/*, etc.
    match /listings/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Profile images - anyone can read, only owner can write
    match /profiles/{userId}/{imageId} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Chat images - only conversation participants can access
    match /chat/{conversationId}/{imageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
